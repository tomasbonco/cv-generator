doctype 5
html(lang="en", ng-app)
	head
		meta(charset="utf-8")
		link(rel="stylesheet", href="css/bootstrap.min.css")
		link(rel="stylesheet", href="css/style.css")
		link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Roboto:400,300,600,900&subset=latin,latin-ext', type='text/css')

	body

		form(name="form", ng-controller="ctrl", action="http://google.sk")

			.container

				h1 Basic information

				.row

					.col-xs-6

						div
							label.block Pretitle
							input(type="text", name="pretitle", ng-model="pretitle", ng-pattern="/^[a-zA-Z\\. ]*$/", placeholder="e.g. Ing.")
							.error(ng-hide="form.pretitle.$valid") Only letters, dots and spaces are allowed!

						div
							label.block Name*
							input(type="text", name="name", ng-model="name", ng-required="true", placeholder="e.g. John.")
							.error(ng-hide="form.name.$valid") This is required!

					.col-xs-6

						div
							label.block Posttitle
							input(type="text", name="posttitle", ng-model="posttitle", ng-pattern="/^[a-zA-Z\\. ]*$/", placeholder="e.g. CsC.")
							.error(ng-hide="form.posttitle.$valid") Only letters, dots and spaces are allowed!

						div
							label.block Surname*
							input(type="text", name="surname", ng-model="surname", ng-required="true", placeholder="e.g. Smith")
							.error(ng-hide="form.surname.$valid") This is required!

				.both

				h1 Contact information

				.row

					.col-xs-6(ng-init="phones = []; _phone = []")

						div
							label.block Phone number*
							input(type="text", name="phone[0]", ng-model="_phone[0]", ng-pattern="/^[\\+]{0,1}[0-9\\(\\) ]+$/", ng-required="true", placeholder="e.g. +420 123 456 789")
							.error(ng-show="valid('phone[0]').invalid.required") Potrebné vyplniť!
							.error(ng-show="valid('phone[0]').invalid.pattern") Iba číslice, medzery, znak plus a zátvorky!

							div(ng-repeat="phone in phones")
							
								input(type="text", name="phone[{{$index + 1}}]", ng-model="_phone[$index+1]", ng-pattern="/^[\\+]{0,1}[0-9\\(\\) ]+$/", placeholder="e.g. +420 123 456 789")
								.error(ng-hide="valid('phone[{{$index + 1}}]').valid") Iba číslice, medzery, znak plus a zátvorky!


							a.btn.pull-right(ng-click="phones.push([])") Add phone number

						.both

						div
							label.block Street*
							input(type="text", name="street", ng-model="street", ng-required="true", placeholder="e.g. Bakery Street 63")
							.error(ng-hide="form.street.$valid") This is required!

						div
							label.block City*
							input(type="text", name="city", ng-model="city", ng-required="true", placeholder="e.g. Boston")
							.error(ng-hide="form.city.$valid") This is required!


						div
							label.block Postal Code*
							input(type="text", name="postal", ng-model="postal" ng-required="true", placeholder="e.g. 405 32")
							.error(ng-hide="form.postal.$valid") This is required!

					.col-xs-6(ng-init="emails = []")

						div
							label.block Email*
							input(type="email", name="email[0]", ng-model="_email", ng-required="true", placeholder="e.g. your-email@gmail.com")
							.error(ng-show="valid('email[0]').invalid.required") This is required!
							
							input(type="email", name="email[{{ $index + 1}}]", ng-repeat="email in emails", placeholder="e.g. your-email@gmail.com")
							a.btn.pull-right(ng-click="emails.push([])") Add email

				.both



				h1 Employment

				.row

					div.col-xs-4

						label.block Company

					div.col-xs-4

						label.block Position

					div.col-xs-2

						label.block Since

					div.col-xs-2

						label.block To

				.both

				.row(ng-init="companies = []; _c_since = []; _c_to = []")

					div.col-xs-4

						input(type="text", name="c_name[0]", placeholder="e.g. Nokia")

					div.col-xs-4

						input(type="text", name="c_position[0]", placeholder="e.g. CEO")

					div.col-xs-2

						input(type="text", name="c_since[0]", ng-model="_c_since[0]", ng-pattern="/^[0-9]{4}\\-[0-9]{2}$/", placeholder="e.g. 2010-10")
						.error(ng-hide="valid('c_since[0]').valid") In format YYYY-MM!


					div.col-xs-2

						input(type="text", name="c_to[0]", ng-model="_c_to[0]", ng-pattern="/^[0-9]{4}\\-[0-9]{2}$/", placeholder="e.g. 2012-07")
						.error(ng-hide="valid('c_to[0]').valid") In format YYYY-MM!


				.row(ng-repeat="company in companies")

					div.col-xs-4

						input(type="text", name="c_name[]", placeholder="e.g. Nokia")

					div.col-xs-4

						input(type="text", name="c_position[]", placeholder="e.g. CEO")

					div.col-xs-2

						input(type="text", name="c_name[{{$index + 1}}]", ng-model="_c_name[ $index + 1 ]", ng-pattern="/^[0-9]{4}\\-[0-9]{2}$/", placeholder="e.g. 2010-10")
						.error(ng-hide="valid('c_name[{{$index + 1}}]').valid") In format YYYY-MM!

					div.col-xs-2

						input(type="text", name="c_to[{{$index + 1}}]", ng-model="_c_to[ $index + 1 ]", ng-pattern="/^[0-9]{4}\\-[0-9]{2}$/", placeholder="e.g. 2012-07")
						.error(ng-hide="valid('c_to[{{$index + 1}}]').valid") In format YYYY-MM!

				
				a.btn.pull-right(ng-click="companies.push([])") Add employment

				.both

				h1 Education

				.row

					div.col-xs-4

						label.block Name

					div.col-xs-4

						label.block Field of study

					div.col-xs-2

						label.block Since

					div.col-xs-2

						label.block To

				.both

				.row(ng-init="studies = []; _e_since = []; _e_to = []")

					div.col-xs-4

						input(type="text", name="e_name[]", placeholder="e.g. Masaryk University")

					div.col-xs-4

						input(type="text", name="e_position[]", placeholder="e.g. Informatics")

					div.col-xs-2

						input(type="text", name="e_since[0]", ng-model="_e_since[ $index + 1 ]", ng-pattern="/^[0-9]{4}\\-[0-9]{2}$/", placeholder="e.g. 2013-09")
						.error(ng-hide="valid('e_since[0]').valid") In format YYYY-MM!

					div.col-xs-2

						input(type="text", name="e_to[0]", ng-model="_e_to[ $index + 1 ]", ng-pattern="/^[0-9]{4}\\-[0-9]{2}$/", placeholder="e.g. 2015-05")
						.error(ng-hide="valid('e_to[0]').valid") In format YYYY-MM!


				.row(ng-repeat="study in studies")

					div.col-xs-4

						input(type="text", name="e_name[]", placeholder="e.g. Masaryk University")

					div.col-xs-4

						input(type="text", name="e_position[]", placeholder="e.g. Informatics")

					div.col-xs-2

						input(type="text", name="e_since[{{$index + 1}}]", ng-model="_e_since[ $index + 1 ]", ng-pattern="/^[0-9]{4}\\-[0-9]{2}$/", placeholder="e.g. 2013-09")
						.error(ng-hide="valid('e_since[{{$index + 1}}]').valid") In format YYYY-MM!

					div.col-xs-2

						input(type="text", name="e_to[{{$index + 1}}]", ng-model="_e_to[ $index + 1 ]", ng-pattern="/^[0-9]{4}\\-[0-9]{2}$/", placeholder="e.g. 2015-05")
						.error(ng-hide="valid('e_to[{{$index + 1}}]').valid") In format YYYY-MM!


				a.btn.pull-right(ng-click="studies.push([])") Add education

				.both

				.row

					.col-xs-6

						h1 Languages
							
						.row(ng-init="languages = [ [] ]")

							div.col-xs-8

								label.block Language

							div.col-xs-4

								label.block Level

						.both

						.row(ng-repeat="language in languages")

							div.col-xs-8

								input(type="text", name="l_language[]", placeholder="e.g. English")

							div.col-xs-4

								select(name="l_level[]")

									option basic
									option intermediate
									option advanced
									option native speaker

						a.btn.pull-right(ng-click="languages.push([])") Add language


					.col-xs-6

						h1 Certificates

						.row(ng-init="certificates = [ [] ]")

							div.col-xs-12

								label.block Certificate
								input(type="text", name="certificate[]", ng-repeat="certificate in certificates", placeholder="e.g. Cisco CCNA")

						a.btn.pull-right(ng-click="certificates.push([])") Add certificate

				.both

				.row

					.col-xs-6(ng-init="skills = [ [] ]")

						h1 Skills

						.row

							.col-xs-8

								label.block Skill

							.col-xs-4

								label.block Level
						
						.both


						.row(ng-repeat="skill in skills")

							.col-xs-8
								
								input(type="text", name="s_skill[]", placeholder="e.g. Microsoft Office")

							.col-xs-4
								
								select(name="s_level[]")

									option basic
									option intermediate
									option advanced
						

						a.btn.pull-right(ng-click="skills.push([])") Add skill


					.col-xs-6(ng-init="hobbies = [ [] ]")

						h1 Hobby

						.row

							.col-xs-12
						
								label.block Hobby
								
								input(type="text", name="hobby[]", ng-repeat="hobby in hobbies", placeholder="e.g. Swimming")

								a.btn.pull-right(ng-click="hobbies.push([])") Add hobby

				.both

				.delimiter

					label.block Password

					.row

						.col-xs-6

							input(type="text", name="password", ng-model="password", ng-required="true")

						.col-xs-6

							em.info.block Set your password, so you will be able to update your CV later.

					.both

				div.btn.disabled.block.text-center(ng-show=" ! form.$valid") Formular is not valid. Please fill it correctly.
				input.btn(type="submit", ng-show="form.$valid")


		script(src="js/angular.min.js")
		script(src="js/script.js")