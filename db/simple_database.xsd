<xsd:schema version="1.0"
            xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            elementFormDefault="qualified">
    <!--Root element-->
    <xsd:element name="cv" type="typeCv"/>
    <!--CV element type definition-->
    <xsd:complexType name="typeCv">
       <xsd:sequence>
           <xsd:element minOccurs="1" maxOccurs="1" name="firstname" type="xsd:string"/>
       </xsd:sequence>
       <xsd:attribute name="id" type="typePositiveInteger" use="required"/>
    </xsd:complexType>
    <!--CV id type definition-->
    <xsd:simpleType name="typePositiveInteger">
        <xsd:restriction base="xsd:integer">
            <xsd:pattern value="[0-9]+"/>
        </xsd:restriction>
    </xsd:simpleType>
    <xsd:simpleType name="typeNonEmptyString">
        <xsd:restriction base="xsd:string">
            <xsd:pattern value="[\s\S]+"/>
        </xsd:restriction>
    </xsd:simpleType>

</xsd:schema>
